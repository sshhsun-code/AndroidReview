<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add" />

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_add"
        android:text="get_info" />

    <Button
        android:id="@+id/btn_get_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_get_info"
        android:text="get_list" />

    <Button
        android:id="@+id/btn_set_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get_info"
        android:layout_toRightOf="@id/btn_add"
        android:text="set_list" />

    <Button
        android:id="@+id/btn_get_S_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_get_info"
        android:layout_toRightOf="@id/btn_get_info"
        android:text="get_S_list" />

    <TextView
        android:id="@+id/text_show_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@id/btn_add"
        android:layout_marginTop="30dp"
        android:text="show resule:" />
</RelativeLayout>